---
const { activePage } = Astro.props
const links = [
  { href: '/', text: 'Library' },
  { href: '/cart', text: 'Cart' },
  { href: '/about', text: 'About' }
]
---

<header>
  <h1>Henri Pottier Library</h1>
  <nav>
    {links.map((link) => link.text === activePage ? <b>{link.text}</b> : <a href={link.href}>{link.text}</a>)}
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: var(--primary);
    width: 100%;
    color: var(--white);
  }

  header > nav {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: var(--spacing-16);
    padding-bottom: var(--spacing-12);
    width: 100%;
  }

  header > nav > a {
    color: var(--white);
    text-decoration: none;
  }

  @media screen and (min-width: 768px) {
    header {
      flex-direction: row;
      justify-content: space-between;
      padding: 0 var(--spacing-24);
    }

    header > h1 {
      white-space: nowrap;
    }

    header > nav {
      justify-content: flex-end;
      padding-bottom: 0;
    }

    header > nav > a:hover {
      text-decoration: underline;
    }
  }
</style>
